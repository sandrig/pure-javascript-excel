{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "import/no-unresolved": "off",
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "no-restricted-syntax": 0
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}